<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="ltr"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Blue_bits_Team">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:src="@drawable/hi" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="عن تطبيق ITE20"
            android:textColor="@color/colorPrimary"
            android:textSize="19dp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#f2f2f2">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="#f9f9f9"
                    android:text="برنامج لطلاب الهندسة المعلوماتية- حلب الدفعة 20"
                    android:textColor="#000"
                    android:fontFamily="@font/a3"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="18dp"

                    android:fontFamily="@font/a4"
                    android:gravity="center"
                    android:textColor="#000"
                    android:text="@string/aboutUs"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="فريق العمل"
                    android:textColor="@color/colorPrimary"
                    android:textSize="19dp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/a4"
                    android:gravity="center"
                    android:textColor="#000"
                    android:text="@string/workngTeam"
                    />



            </LinearLayout>



        </androidx.cardview.widget.CardView>









    </LinearLayout>
</androidx.core.widget.NestedScrollView>